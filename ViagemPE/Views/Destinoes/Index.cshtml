@model IEnumerable<ViagemPE.Models.Destino>

@{
    ViewData["Title"] = "Destinos";
}

<h1>Destinos</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary">Criar novo destino</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Destino" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Destino" class="btn btn-primary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Destino"class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
