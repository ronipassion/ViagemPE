@model ViagemPE.Models.Promo

@{
    ViewData["Title"] = "Criar Promoção";
}

<h1>Criar</h1>

<h4>Promoções</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Primeira_Cidade" class="control-label"></label>
                <input asp-for="Primeira_Cidade" class="form-control" />
                <span asp-validation-for="Primeira_Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Segunda_Cidade" class="control-label"></label>
                <input asp-for="Segunda_Cidade" class="form-control" />
                <span asp-validation-for="Segunda_Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diarias" class="control-label"></label>
                <input asp-for="Diarias" class="form-control" />
                <span asp-validation-for="Diarias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Taxa_Desconto" class="control-label"></label>
                <input asp-for="Taxa_Desconto" class="form-control" />
                <span asp-validation-for="Taxa_Desconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
