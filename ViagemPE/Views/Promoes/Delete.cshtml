@model ViagemPE.Models.Promo

@{
    ViewData["Title"] = "Deletar Promoção";
}

<h1>Deletar Promoções</h1>

<h3>Tem certeza que deseja deletar esta promoção?</h3>
<div>
    
    <hr />
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Primeira_Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Primeira_Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Segunda_Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Segunda_Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Diarias)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Diarias)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Taxa_Desconto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Taxa_Desconto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Promo" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
